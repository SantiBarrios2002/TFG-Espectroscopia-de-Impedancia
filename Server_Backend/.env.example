# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://iot_user:iot_pass@localhost:5432/iot_server
DATABASE_ECHO=false

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_KEEPALIVE=60
MQTT_USE_SSL=false

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# MATLAB Integration
MATLAB_DATA_BATCH_SIZE=1000
MATLAB_REQUEST_TIMEOUT=30

# ESP32 Device Settings
DEVICE_HEARTBEAT_INTERVAL=30
DEVICE_TIMEOUT=300
MAX_DEVICES=100